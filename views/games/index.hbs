
<header class="d-flex justify-content-between align-items-center">
  <h1>Game Library</h1>
  <a href="/new" class="btn btn-primary">New Game</a>
</header>

<div class="row">
    {{#each game}}
        <div class="d-flex flex-column col-4 card" >
            <img alt='image' class="card-img"  src="{{this.image}}" alt="Card image cap">
            <div class="card-body d-flex flex-column justify-content-between">
            <h3 class="card-title justify-content-between align-items-center">{{this.name}}</h3>
                <div><h5>Rating:</h5>{{this.rating}}/5</div>
                
                
                <div>
                        <a href="/{{this._id}}" class="btn btn-info">View</a>
                            <form action="/{{this._id}}?_method=DELETE" method="POST" class="d-inline">
                            <input type="submit" value="Delete" class="btn btn-danger" /> </form>
                </div>
            </div>
            <div class="d-flex" >
            </div>
        </div>
    {{/each}}
</div>